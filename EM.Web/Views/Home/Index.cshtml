@using EM.Domain;
@{
    ViewData["Title"] = "EM.Web";
}
@model IEnumerable<EM.Domain.ProjetoEM.EM.Domain.Aluno>
<div class="text-center">
    <h1 class="display-4">Ficha do aluno</h1>
</div>
<br />
<div class="row">
    <div class=" col-lg-12" style="text-align: right;">
        <a tabindex="3" class="btn btn-primary  " asp-area="" asp-controller="Home" asp-action="Cadastrar"><i class="fa fa-user-plus"></i>Cadastrar</a>
    </div>
</div>
<br />
<form asp-controller="Home" asp-action="Index" method="get" class="card card-sm">
    <div class="card-body row no-gutters align-items-center">
        <div class="col-auto">
            <label class="font-weight-bold my-1 mr-2" for="inlineFormCustomSelectPref">Pesquisar por:</label>
        </div>
        <div class="col-auto">
            <div class="btn-group d-flex" role="group">
                <input type="radio" class="btn-check" name="pesquisePor" id="nome" value="nome" autocomplete="off" checked="">
                <label class="btn btn-outline-primary" for="nome">Nome</label>
                <input type="radio" class="btn-check" name="pesquisePor" id="matricula" value="matricula" autocomplete="off">
                <label class="btn btn-outline-primary" for="matricula">Matricula</label>
            </div>
        </div>
        <div class="col">
            <input name="SearchString" class="form-control" type="text" placeholder="" autocomplete="off" id="pesquisa" maxlength="30" value="">
        </div>
        <div class="col-auto">
            <button class="btn btn-primary" id="pesq" type="submit" value="Filter"><i class="fa fa-search " title="Pesquisar"></i>Buscar</button>
        </div>
    </div>
</form>
<br />
<div class="row ">
    @if (Model != null && Model.Any())
    {
        <table class="table table-striped table-hover ">
            <thead class="">
                <tr>
                    <th scope="col" class="text-center col-1">Matricula</th>
                    <th scope="col" class="text-left col-4">Nome</th>
                    <th scope="col" class=" text-center col-2">Sexo</th>
                    <th scope="col" class=" text-center col-2">CPF</th>
                    <th scope="col" class=" text-center col-2">Nascimento</th>
                    <th scope="col" class=" text-center col-1"></th>
                </tr>
                
            </thead>
          
            <tbody class="">
                @foreach (var item in Model)
                {
                    <tr class="align-middle">
                        <th scope="row" class=" text-center">@item.Matricula</th>
                        <td scope="row" class="text-left">@item.Nome</td>
                        <td scope="row" class=" text-center">@item.Sexo</td>
                        <td scope="row" id="cpf" class=" text-center">@item.CPF</td>
                        <td scope="row" class=" text-center">
                            @Html.TextBoxFor(model => item.Nascimento, "{0:dd/MM/yyyy}", new { @class = " text-center  bg-transparent border-0  border-light col-8", @id = "inputNascimento", @readOnly = "true" })
                        </td>
                        <td scope="row" class="text-center col-2">
                            <a asp-area="asdf" asp-controller="Home" asp-action="Deletar" asp-route-id="@item.Matricula"
                             onclick="return confirm('Tem ceteza que deseja excluir @item.ToString()?');"
                            class="btn btn-danger btn-sm text-white " title="Deletar">
                            <i class="fa fa-trash "></i></a>
                            <a asp-area="" asp-controller="Home" asp-action="Editar" asp-route-id="@item.Matricula"
                             class="btn btn-info btn-sm text-white"  title="Editar">
                                <i class="fa fa-pen-to-square"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>



