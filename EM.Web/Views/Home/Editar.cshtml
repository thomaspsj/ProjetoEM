@using EM.Domain;
@{
    ViewData["Title"] = "Editar aluno";
}
@model EM.Domain.ProjetoEM.EM.Domain.Aluno


<h4>Editar aluno</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form method="post" class="form-control">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="container">
                <div class="row">
                    <div class="col-3 ">
                        @Html.LabelFor(a => a.Matricula, new { @class = "control-label" })
                        @Html.TextBoxFor(a => a.Matricula, new { @class = "form-control", @required = "true", @type = "text", @style = "text-align:right", @minlength = "1", @maxlength = "9", @onkeypress = "return onlynumber()", @readonly = true })
                    </div>
                    <div class="col-9">
                        @Html.LabelFor(a => a.Nome, new { @class = "control-label" })
                        @Html.TextBoxFor(a => a.Nome, new { @class = "form-control", @required = "true", @id = "nome", @placeholder = "Digite o nome do aluno", @minlength = "3", @maxlength = "100" })
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        <label for="Sexo"> Sexo</label>
                        @Html.DropDownListFor(Model => Model.Sexo, new SelectList(Enum.GetValues(typeof(Sexo))), htmlAttributes: new { @class = "form-control" })
                    </div>
                    <div class="col ">
                        @Html.LabelFor(a => a.Nascimento, new { @class = "control-label" })
                        @Html.EditorFor(a => a.Nascimento, new { htmlAttributes = new { @class = "form-control", @id = "nasc", @type = "date", @required = "tue", @min = "1900-01-01", @max = DateTime.Now.ToString("yyyy-MM-dd") } })
                    </div>
                    <div class="col">
                        @Html.LabelFor(a => a.CPF, new { @class = "control-label" })
                        @Html.TextBoxFor(a => a.CPF, new { @class = "form-control", @id = "cpf", @onblur = "return verificarCPF(this.value)", @onpaste = "return false", @autocomplete = "off" })
                    </div>
                </div>
                <br />
                <div class="row">
                    <div class="col-sm-12 text-right">
                        <a asp-area="" asp-controller="Home" asp-action="Index" class="btn btn-danger" title="Voltar">Voltar</a>
                        <input type="submit" value="Salvar" class="btn btn-info " asp-action="Editar" />
                    </div>
                    @if (@ViewBag.Mensagem == "Atualizado!")
                    {
                        <script>
                            Swal.fire({
                                position: 'top-center',
                                icon: 'success',
                                title: 'Atualizado com sucesso!',
                                showConfirmButton: false,
                                timer: 1500
                            })
                        </script>
                       
                    }
                    else if (@ViewBag.Mensagem == "erro")
                    {
                        <script>
                            Swal.fire({
                                icon: 'error',
                                title: 'Verifique os dados digitados!',
                                showConfirmButton: false,
                                timer: 1500
                            })
                        </script>
                    }
                </div>

            </div>

        </form>
    </div>
</div>

